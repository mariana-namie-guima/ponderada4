<!-- views/pages/userform.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ponderada semana 5</title>
</head>
<body>
    <h1>Cadastro</h1>
    <p>Seja bem vindo! Para acessar o site preencha as suas informações abaixo:</p>
    <!-- Formulário de criação de usuário -->
    <h2>Criar Novo Usuário</h2>
    <form action="/user/create" method="post">
        <!-- Campo Nome -->
        <label for="name">Nome:</label> <!-- Rótulo do campo -->
        <input type="text" id="name" name="name" required maxlength="50"> <!-- Entrada de texto -->
        <!-- O atributo "required" torna o campo obrigatório -->
        <!-- O atributo "maxlength" define o número máximo de caracteres permitidos -->
        <br>

        <!-- Campo Idade -->
        <label for="idade">Idade:</label>
        <input type="number" id="idade" name="idade" required min="0" max="120"> <!-- Entrada de número -->
        <!-- O atributo "min" define o valor mínimo permitido -->
        <!-- O atributo "max" define o valor máximo permitido -->
        <br>

        <!-- Campo Email -->
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required maxlength="100"> <!-- Entrada de email -->
        <!-- O atributo "type" define o tipo de entrada como email -->
        <!-- O atributo "maxlength" define o número máximo de caracteres permitidos -->
        <br>

        <!-- Campo Senha -->
        <label for="password">Senha:</label>
        <input type="password" id="password" name="password" required> <!-- Entrada de senha -->
        <!-- O atributo "type" define o tipo de entrada como senha -->
        <!-- O atributo "required" torna o campo obrigatório -->
        <br>

        <!-- Botão de envio -->
        <button type="submit">Criar Usuário</button> <!-- Botão para enviar o formulário -->
    </form> 
</body>
</html>
